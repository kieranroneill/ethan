{
  "env": {
    "mocha": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "assert": true,
    "defaults": true,
    "errors": true,
    "expect": true,
    "helpers": true,
    "mock": true,
    "spy": true,
    "strings": true,
    "stub": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "eol-last": ["error", "always"],
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["error"],
    "max-len": ["error", 125, { "ignoreComments": true }],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
